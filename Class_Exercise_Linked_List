#define _CRT_SECURE_NO_WARNINGS
#include <iostream>
#include <cstring>

using namespace std;

class Person {
public:
    char name[10];
    int age;
    char* hobby[3];

    Person() {
        for (int i = 0; i < 3; i++) {
            hobby[i] = nullptr;
        }
    }

    virtual void print_user() {
        cout << this->name << endl;
        cout << this->age << endl;
        for (int j = 0; j < 3; j++) {
            if (this->hobby[j] != nullptr)
                cout << this->hobby[j] << ' ';
        }
        cout << '\n' << endl;
    }
};

class VIPerson : public Person {
private:
    char* email;
public:
    VIPerson(char* name, int age, char* email) {
        strncpy(this->name, name, 9);
        this->name[9] = '\0';
        this->age = age;
        this->email = new char[strlen(email) + 1];
        strcpy(this->email, email);
    }

    void print_user() {
        cout << this->name << endl;
        cout << this->age << endl;
        for (int j = 0; j < 3; j++) {
            if (this->hobby[j] != nullptr) {
                cout << this->hobby[j] << ' ';
            }
        }
        cout << email << endl;
    }
};
class Node {
public:
    Person* mp;
    Node* next;
};

class PersonManagerList {
private:
    int MenuOption, index;
    Node* head;
public:

    PersonManagerList() {
        index = 0;
        head = nullptr;
    }

    int menu() {
        do
        {
            cout << "메뉴를 선택하시오. " << endl;
            cout << "1. 회원등록" << endl;
            cout << "2. 전체 회원 조회" << endl;
            cout << "3. 전체 회원 수" << endl;
            cout << "4. 이름 찾기" << endl;
            cout << "5. 기존 회원 관심사 추가" << endl;
            cin >> MenuOption;
            cout << endl;
            if (MenuOption < 1 || MenuOption >5) {
                cout << "잘못된 입력" << endl;
            }
            cout << endl;
        } while (MenuOption < 1 || MenuOption >5);

        return MenuOption;
    }

    void join_user() {
        int choose, age;
        char name[10], email[10];
        Node* np = new Node;

        do
        {
            cout << "메뉴를 선택하시오. " << endl;
            cout << "1. VIP" << endl;
            cout << "2. 일반회원" << endl;
            cin >> choose;
            cout << endl;
            if (MenuOption < 1 || MenuOption >5) {
                cout << "잘못된 입력" << endl;
            }
            cout << endl;
        } while (choose < 1 || MenuOption >2);

        if (choose == 1) {
            cout << "이름과 나이를 입력하시오. " << endl;
            cout << "이름: ";
            cin >> name;
            cout << "나이: ";
            cin >> age;
            cout << "이메일: ";
            cin >> email;
            cout << "\n";
            Person* p = new VIPerson(name, age, email);
            np->mp = p;
            np->next = nullptr;
            if (this->head == nullptr) { 
                this->head = np;
            }
            else { 
                Node* temp = head;
                while (temp->next != nullptr) {
                    temp = temp->next;
                }
                temp->next = np;
            }
            index++;
        }
        else {
           Person *p1 = new Person;
            cout << "이름과 나이를 입력하시오. " << endl;
            cout << "이름: ";
            cin >> p1->name;
            cout << "나이: ";
            cin >> p1->age;
            cout << "\n";
            np->mp = p1;
            np->next = nullptr;
            if (this->head == nullptr) {
                this->head = np;
            }
            else {
                Node* temp = head;
                while (temp->next != nullptr) {
                    temp = temp->next;
                }
                temp->next = np;
            }
            index++;
        }
    }

    void search_user() {
        Node* temp = head;

        while (temp != nullptr) {
            temp->mp->print_user();
            cout << endl;
            temp = temp->next;
        }
    }

    void total_user() {
        cout << "회원 명수: " << index << endl;
        cout << '\n';
    }

    Node* find_name() {
        char name[10];
        Node* temp = head;

            cout << "이름을 입력하시오. ";
            cin >> name;

            if (temp == nullptr) {
                cout << "찾는 사람이 없습니다" << endl;
                cout << endl;
                return nullptr;
            }

            while (1)
            {
                if (strcmp(temp->mp->name, name) == 0) {
                    temp->mp->print_user();
                    return temp;
                }
                
                if (temp->next == nullptr) {
                    cout << "찾는 사람이 없습니다" << endl;
                    cout << endl;
                    return nullptr;
                }
                temp = temp->next;
            }
    }

    void add_hobby() {
        Node* tmp = find_name();
        int k;

        if (tmp == nullptr) {
            return;
        }

        for (k = 0; k < 3; k++) {
            if (tmp->mp->hobby[k] == nullptr) {
                cout << "취미를 입력하시오. " << endl;
                tmp->mp->hobby[k] = new char[10];
                cin >> tmp->mp->hobby[k];
                break;
            }
        }

        if (k == 3) {
            cout << "입력 불가" << endl;
        }
        cout << endl;
    }
};

int main() {

    PersonManagerList p1;
    int menu, i = 0;

    while (1) {
        menu = p1.menu();

        if (menu == 1) {
            p1.join_user();
        }
        else if (menu == 2) {
            p1.search_user();
        }
        else if (menu == 3) {
            p1.total_user();
        }
        else if (menu == 4) {
            p1.find_name();
        }
        else {
            p1.add_hobby();
        }
    }
}
